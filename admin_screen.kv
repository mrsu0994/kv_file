                                        on_active: root.link_audio_switchs()
                                        track_color_active: "228B22"
                                        thumb_color_active: "32CD32"

                            MDBoxLayout:
                                orientation: "horizontal"
                                padding: "10dp"
                                pos_hint: {"center_x": .5, "center_y": .45}
                                size_hint: 1, .2


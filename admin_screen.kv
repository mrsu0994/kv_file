                                    text: "Customer"
                                    font_size: "16sp"
                                    halign: "left"
                                    theme_text_color: "Custom"
                                    text_color: Colors.white
                                    size_hint: .5, 1

                                FloatLayout:
                                    size_hint: .3, 1
                                    MDDropDownItem:
                                        id: customer_audio
                                        pos_hint: {'center_x': .5, 'center_y': .5}
                                        text: 'Khách hàng'
                                        on_release: root.customer_menu_audio()


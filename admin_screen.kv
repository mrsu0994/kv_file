                                    id: git_audio
                                    text: ""
                                    hint_text: "nhập git name mới"
                                    font_size: "16sp"
                                    halign: "left"
                                    theme_text_color: "Custom"
                                    text_color: Colors.white
                                    size_hint: .5, 1

                                FloatLayout:
                                    size_hint: .3, 1

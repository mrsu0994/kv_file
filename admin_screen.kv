                                orientation: "horizontal"
                                padding: "10dp"
                                pos_hint: {"center_x": .5, "center_y": .9}
                                size_hint: 1, .2

                                FloatLayout:
                                    size_hint: .2, 1
                                    MDIcon:
                                        icon: "account-group"
                                        pos_hint: {"center_x": .5, "center_y": .5}


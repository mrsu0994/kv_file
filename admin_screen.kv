                                orientation: "horizontal"
                                padding: "10dp"
                                pos_hint: {"center_x": .5, "center_y": .75}
                                size_hint: 1, .2

                                FloatLayout:
                                    size_hint: .2, 1
                                    MDIcon:
                                        icon: "email"
                                        pos_hint: {"center_x": .5, "center_y": .5}

                                MDTextField:
                                    id: email_audio
                                    text: ""
                                    hint_text: "nhập email"
                                    font_size: "16sp"
                                    halign: "left"
                                    theme_text_color: "Custom"
                                    text_color: Colors.white
                                    size_hint: .5, 1

                                FloatLayout:
                                    size_hint: .3, 1
                                    MDSwitch:
                                        id: email_audio_switch
                                        pos_hint: {'center_x': .5, 'center_y': .33}
                                        active: False
                                        on_active: root.email_audio_switchs()
                                        track_color_active: "228B22"
                                        thumb_color_active: "32CD32"

                            MDBoxLayout:
                                orientation: "horizontal"
                                padding: "10dp"
                                pos_hint: {"center_x": .5, "center_y": .6}
                                size_hint: 1, .2

                                FloatLayout:
                                    size_hint: .2, 1
                                    MDIcon:
                                        icon: "link"

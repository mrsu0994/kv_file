#: import BottomBar components.uix.bottombar.BottomBar
#: import Tab components.uix.tab.Tab
#: import Colors settings.colors.Colors

<Admin_Screen>:
    name: "admin_screen"

    MDBoxLayout:
        orientation: "vertical"
        # (I)
        MDBoxLayout:
            orientation: "vertical"
            MDTabs:
                id: tab_moi
                background_color: Colors.white
                text_color_normal: Colors.den
                text_color_active: Colors.black
                indicator_color: Colors.black
                tab_bar_height: "35dp"
                font_size: "6sp"

                Tab:
                    title:'Audio'
                    MDFloatLayout:

                        MDBoxLayout:
                            orientation: "horizontal"
                            padding: "10dp"
                            pos_hint: {"center_x": .5, "center_y": .9}
                            size_hint: 1, .2
                            padding: dp(40)
                            spacing: '20dp'
                            MDTextField:
                                id: link_texts
                                hint_text: "Nhập link"
                                text: ""
                                helper_text_mode: "on_focus"
                                
                            MDRaisedButton:
                                text: "Search"
                                on_press: root.search_links()
                                pos_hint: {"center_y": .7}
                            
                        FloatLayout:
                            pos_hint: {"center_x": .5, "center_y": .45}
                            size_hint: None, None
                            size: root.width * 0.8, "400dp"
                            canvas:
                                Color:
                                    rgba: get_color_from_hex("2F406C")
                                RoundedRectangle:
                                    pos: self.pos
                                    size: self.size
                                    radius: [25, 25, 25, 25]
                                Color:
                                    rgba: Colors.do
                                Line:
                                    width: 2
                                    rounded_rectangle: (self.x, self.y, self.width, self.height, 25)


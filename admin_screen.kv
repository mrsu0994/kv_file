                                        on_active: root.name_audio_switchs()
                                        track_color_active: "228B22"
                                        thumb_color_active: "32CD32"

                            MDBoxLayout:
                                orientation: "horizontal"
                                padding: "10dp"
                                pos_hint: {"center_x": .5, "center_y": .3}
                                size_hint: 1, .2

                                FloatLayout:
                                    size_hint: .2, 1
                                    MDIcon:
                                        icon: "git"
                                        pos_hint: {"center_x": .5, "center_y": .5}


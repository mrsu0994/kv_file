#: import Colors settings.colors.Colors

<Change_Pass_Screen>:
    name: "change_pass_screen"
    md_bg_color: Colors.den
    MDLabel:
        text: app.APP_NAME
        halign: "center"
        pos_hint: {"center_y": .86}
        font_style: "Subtitle2"
        font_size: sp(80)
        theme_text_color: "Custom"
        text_color: Colors.vang1
        elevation: 10

    MDLabel:
        text: "Change Password"
        halign: "center"
        pos_hint: {"center_y":.69}
        font_style: "Subtitle2"
        font_size: sp(40)
        theme_text_color: "Custom"
        text_color: Colors.black

    MDLabel:
        text: "Nhập Password mới để đổi mật khẩu"
        halign: "center"
        pos_hint: {"center_y":.58}
        font_style: "Subtitle2"
        font_size: sp(20)
        theme_text_color: "Custom"
        text_color: Colors.white

    MDTextField:
        id: password
        hint_text: "Nhập Password mới"
        pos_hint: {"center_x": 0.5, "center_y": 0.48}
        size_hint_x: None
        width: dp(320)
        color_mode: 'custom'
        line_color_focus: Colors.vang1
        #mode: "rectangle"
        #normal_color: Colors.do
        password: True

    MDTextField:
        id: re_password
        hint_text: "Lặp lại Password"
        pos_hint: {"center_x": 0.5, "center_y": 0.37}
        size_hint_x: None
        width: dp(320)
        color_mode: 'custom'
        line_color_focus: Colors.vang1
        password: True
    
    MDRaisedButton:
        text: "Change Password"
        pos_hint: {"center_x": 0.5, "center_y":0.24}
        size_hint_x: None
        width: dp(320)
        color_mode: 'custom'
        line_color_focus: Colors.vang1
        on_release: root.verify_email_signup()

    MDTextButton:
        text: f"[color=#000000]Have an account?[/color] Log in"
        markup: True
        pos_hint: {"center_x":0.5, "center_y":0.16}
        on_release: app.screen_manager.change_screen("login_screen")

    MDLabel:
        text: f"[font=Icons] {md_icons['copyright']}[/font]  [font=Roboto]{app.COMPANY_NAME} 2020[/font]"
        markup: True
        halign: "center"
        pos_hint: {"center_y":0.05}

#: import Colors settings.colors.Colors

<Copyright_Screen>:
    name: "copyright_screen"
    md_bg_color: Colors.white
    orientation: 'vertical'
    padding: '5dp'
    spacing: '10dp'

    MDLabel:
        id: total_word_count_label
        text: "QUẢNG ĐƯỜNG (hành trình) = VẬN TỐC x THỜI GIAN (S = v.t)"
        halign: "center"
        pos_hint: {"center_y": .9}
        font_size: sp(30)
        size_hint_y: None
        theme_text_color: "Custom"
        text_color: Colors.black

    MDLabel:
        id: total_word_count_label
        text: "từ VIỆT NAM đi MỸ thì ĐI BỘ hay MÁY BAY sẽ nhanh?"
        halign: "center"
        pos_hint: {"center_y": .8}
        font_size: sp(30)
        size_hint_y: None
        theme_text_color: "Custom"
        text_color: Colors.black

    MDLabel:
        id: total_word_count_label
        text: "ĐƯỜNG NÀO CŨNG VỀ LA MÃ"
        halign: "center"
        pos_hint: {"center_y": .7}
        font_size: sp(30)
        size_hint_y: None
        theme_text_color: "Custom"
        text_color: Colors.black

    MDRaisedButton:
        text: "Mua Bản Quyền SuSpeak"
        color: Colors.do
        halign: "center"
        pos_hint: {'center_x': 0.5,'center_y': 0.56}
        on_release: app.screen_manager.change_screen("copyright_buy_screen")
        font_size: sp(25)

    MDRaisedButton:
        text: "Dùng Thử"
        color: Colors.do
        halign: "center"
        pos_hint: {'center_x': 0.5,'center_y': 0.44}
        font_size: sp(25)
        on_release: root.suspeak_redirect()

    MDLabel:
        id: total_word_count_label
        text: "ĐI BỘ về La Mã mất 10 năm, XE ĐẠP 5 năm.."
        halign: "center"
        pos_hint: {"center_y": .3}
        font_size: sp(30)
        size_hint_y: None
        theme_text_color: "Custom"
        text_color: Colors.black

    MDLabel:
        id: total_word_count_label
        text: "ĐI MÁY BAY về La Mã mất 2 giờ"
        halign: "center"
        pos_hint: {"center_y": .2}
        font_size: sp(30)
        size_hint_y: None
        theme_text_color: "Custom"
        text_color: Colors.black

    MDLabel:
        id: total_word_count_label
        text: "IQ, NĂNG KHIẾU... cũng chỉ là sức người mà thôi"
        halign: "center"
        pos_hint: {"center_y": .1}
        font_size: sp(30)
        size_hint_y: None
        theme_text_color: "Custom"
        text_color: Colors.black